<% friendship = Friendship.find_by('user_id IN (?) AND friend_id IN (?)', [@user.id, @current_user.id],[@user.id, @current_user.id])  %>

<%= form_for user, url: user_friendship_path(user_id: @user.id, id: friendship.id), method: :delete do |t| -%>
    <%= t.hidden_field :id, value: friendship.id -%>
    <%= t.hidden_field :operation, value: 'none' -%>
    <%= t.submit 'Unfriend' -%>
  <%- end -%>