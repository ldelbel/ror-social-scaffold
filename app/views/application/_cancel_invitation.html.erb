<% friendship = Friendship.find_by('friend1_id IN (?) AND friend2_id IN (?)', [@current_user.id, @user.id],[@current_user.id, @user.id]) %>

<%= form_for @current_user, url: user_friendship_path(user_id: @current_user.id, id: friendship.id), method: :delete do |t| -%>
  <%= t.hidden_field :friend2_id, value: user.id -%>
  <%= t.hidden_field :operation, value: 'send' -%>
  <%= t.submit 'Cancel Invitation' -%>
<%- end -%>




