<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <%= form_for user, url: user_friendships_path(user_id: @user.id, id: user.id), method: :post do |t| -%>
            <%= t.hidden_field :friend2_id, value: user.id -%>
            <%= t.submit 'Send Invitation' -%>
          <%- end -%>
        </span>
      </li>
    <% end %>
  </ul>
</section>
